<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:background="@drawable/white_button_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_artist_review_recycler_profile_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        tools:src="@drawable/best_artist_recycler_image_1_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="20dp" />

    <TextView
        android:id="@+id/activity_artist_review_recycler_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/roboto_bold"
        tools:text="김창완"
        android:textColor="@color/box_border"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/activity_artist_review_recycler_profile_image"
        app:layout_constraintStart_toEndOf="@id/activity_artist_review_recycler_profile_image"
        app:layout_constraintTop_toTopOf="@id/activity_artist_review_recycler_profile_image" />

    <TextView
        android:id="@+id/activity_artist_review_sample_review_text"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="2"
        tools:text="구매했는데 실물도 그렇고 너무 만족스럽습니다. 다만 작가분이 포장해주실 때 조금 더 꼼꼼하게 포장해주셨으면 더 좋았을 것 같습니다 ㅎㅎ"
        android:textColor="@color/main_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_artist_review_recycler_profile_image" />

    <TextView
        android:id="@+id/activity_artist_review_more_see_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="더보기"
        android:textColor="@color/util_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/activity_artist_review_sample_review_text"
        app:layout_constraintTop_toBottomOf="@id/activity_artist_review_sample_review_text" />

    <TextView
        android:id="@+id/activity_artist_review_report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_bold"
        android:text="신고"
        android:textColor="@color/box_border"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/activity_artist_review_more_see_text"
        app:layout_constraintTop_toBottomOf="@id/activity_artist_review_more_see_text" />


</androidx.constraintlayout.widget.ConstraintLayout>